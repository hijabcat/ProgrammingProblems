
import java.util.Scanner;
public class BitPlusPlus {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		int b = 0;
		String c;
		int a = input.nextInt();
		
		for (int i=0;i<a;i++) {
			
			c = input.next();
			
			if (c.equals("++X")||c.equals("X++")) {
				b+=1;
			}
			if (c.equals("--X")||c.equals("X--")) {
				b-=1;
			}
		}
		System.out.print(b);
	}

}
